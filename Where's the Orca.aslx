    <object name="John Office">
      <description><![CDATA[This is John's office. <br/>]]></description>
      <object name="File">
        <inherit name="editor_object" />
        <look>The file show's "DQRUFDIRUDPLOOLRQ"</look>
        <displayverbs type="stringlist">
          <value>Look at</value>
          <value>Take</value>
